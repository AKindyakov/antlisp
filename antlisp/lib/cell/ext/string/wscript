#!/usr/bin/env python
# encoding: utf-8


def build(ctx):
    ctx.stlib(
        target="antlisp-lib-cell-ext-string",
        source = [
            "string.cpp",
        ],
        use=[
            "antlisp-lib-cell",
            "antlisp-lib-util",
            "antlisp-lib-cell-ext",
        ],
    )

    ctx.program(
        target="string_ut",
        features="test",
        source="string_ut.cpp",
        use=[
            "antlisp-lib-cell-ext-string",
        ],
    )
