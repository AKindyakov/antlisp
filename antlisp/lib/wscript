#!/usr/bin/env python
# encoding: utf-8


def build(ctx):
    ctx.stlib(
        target="antlisp-lib",
        source = [
            "interface.cpp",
        ],
        use=[
            "antlisp-lib-cell",
            "antlisp-lib-function",
            "antlisp-lib-parser",
            "antlisp-lib-util",
            "antlisp-lib-function-builtin",
            "antlisp-lib-exttypes",
            "antlisp-lib-cell-string",
        ],
    )
    ctx.recurse([
        "cell",
        "function",
        "parser",
        "test",
        "util",
    ])
